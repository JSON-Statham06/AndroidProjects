<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/card_bg_color"
    tools:context=".ui.country.CovidCountryDetail">

    <LinearLayout
        android:layout_margin="16dp"
        android:id="@+id/linearLayoutCountryName"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">

        <TextView
            android:textAlignment="center"
            style="@style/TotalFontStyle"
            android:textColor="#fff"
            tools:text="China"
            android:id="@+id/tvDetailCountryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        
    </LinearLayout>
    
    
    <LinearLayout
        android:id="@+id/linearLayoutCases"
        android:layout_centerInParent="true"
        android:layout_below="@id/linearLayoutCountryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:drawableTop="@drawable/ic_cases32"
                android:text="Toplam Teşhis"
                android:textColor="#fff"
                style="@style/LabelFontStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:id="@+id/tvDetailTotalCases"
                tools:text="80282"
                android:layout_marginTop="-10dp"
                android:textColor="@color/colorTotalConfirmed"
                style="@style/TotalFontStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:drawableTop="@drawable/ic_cases32"
                android:text="Günlük Teşhis"
                style="@style/LabelFontStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:id="@+id/tvDetailTodayCases"
                tools:text="45"
                android:layout_marginTop="-10dp"
                android:textColor="@color/colorTotalConfirmed"
                style="@style/TotalFontStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayoutDeaths"
        android:layout_centerInParent="true"
        android:layout_below="@id/linearLayoutCases"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:drawableTop="@drawable/ic_death32"
                android:text="Toplam Ölüm"
                android:textColor="#fff"
                style="@style/LabelFontStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:textAlignment="center"
                android:id="@+id/tvDetailTotalDeaths"
                tools:text="3245"
                android:layout_marginTop="-10dp"
                android:textColor="@color/colorTotalDeaths"
                style="@style/TotalFontStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:drawableTop="@drawable/ic_death32"
                android:text="Günlük Ölüm"
                android:textColor="#fff"
                style="@style/LabelFontStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:textAlignment="center"
                android:id="@+id/tvDetailTodayDeaths"
                tools:text="4"
                android:layout_marginTop="-10dp"
                android:textColor="@color/colorTotalDeaths"
                style="@style/TotalFontStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayoutRecovered"
        android:layout_centerInParent="true"
        android:layout_below="@id/linearLayoutDeaths"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:drawableTop="@drawable/ic_recovered32"
                android:text="Toplam İyileşme"
                android:textColor="#fff"
                style="@style/LabelFontStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:id="@+id/tvDetailTotalRecovered"
                tools:text="80282"
                android:layout_marginTop="-10dp"
                android:textColor="@color/colorTotalRecovered"
                style="@style/TotalFontStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_below="@id/linearLayoutRecovered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:drawableTop="@drawable/ic_enfected32"
                android:text="Toplam Enfekte"
                style="@style/LabelFontStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:id="@+id/tvDetailTotalActive"
                tools:text="3245"
                android:layout_marginTop="-10dp"
                android:textColor="@color/colorTotalConfirmed"
                style="@style/TotalFontStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:drawableTop="@drawable/ic_critical32"
                android:text="Toplam Kritik"
                style="@style/LabelFontStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:textAlignment="center"
                android:id="@+id/tvDetailTotalCritical"
                tools:text="3"
                android:layout_marginTop="-10dp"
                android:textColor="@color/colorTotalConfirmed"
                style="@style/TotalFontStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>


    </LinearLayout>



</RelativeLayout>